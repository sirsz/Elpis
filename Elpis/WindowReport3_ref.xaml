<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elpis"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" x:Class="WindowReport3_ref"
        mc:Ignorable="d"
        Title="WindowReport3_ref" Height="300" Width="300">

    <StackPanel>
        <chartingToolkit:Chart Height="262" HorizontalAlignment="Left" 
                               Name="columnChart" Title="Column Series Demo" 
                               Width="360">
            <chartingToolkit:ColumnSeries x:Name="columnSeries" DependentValuePath="Value" IndependentValuePath="Key" />
        </chartingToolkit:Chart>

        <!-- radius-->
        <TextBox x:Name="rad"/>

        <!-- thita-->
        <TextBox x:Name="thita" />

        <Button Content="Plot" Click="Button_Click"/>
    </StackPanel>

</Window>
